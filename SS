import streamlit as st

# Set the page configuration
st.set_page_config(
    page_title="Social Score Calculator",
    page_icon=":sparkles:",
    layout="centered",
    initial_sidebar_state="collapsed"
)

# Custom styling
st.markdown("""
    <style>
    .main {
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 10px;
        border: 1px solid #e9ecef;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }
    .title {
        text-align: center;
        font-size: 2.5rem;
        color: #495057;
    }
    .subtitle {
        text-align: center;
        font-size: 1.25rem;
        color: #6c757d;
    }
    .input-box {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }
    </style>
""", unsafe_allow_html=True)

# App main container
with st.container():
    st.markdown('<div class="main">', unsafe_allow_html=True)

    # Title and subtitle
    st.markdown('<h1 class="title">Welcome to the Social Score Calculator! :sparkles:</h1>', unsafe_allow_html=True)
    st.markdown('<p class="subtitle">Discover insights into your social dynamics with just a few clicks.</p>', unsafe_allow_html=True)

    # Input for the user's name
    st.markdown('<div class="input-box">', unsafe_allow_html=True)
    name = st.text_input("What's your name?", placeholder="Enter your name here...")
    st.markdown('</div>', unsafe_allow_html=True)

    # Button to proceed
    if st.button("Get Started"):
        if name.strip():
            st.success(f"Hello, {name}! Let's begin your journey to understanding your social score. ðŸŽ‰")
        else:
            st.error("Please enter your name to continue.")
    
    st.markdown('</div>', unsafe_allow_html=True)
